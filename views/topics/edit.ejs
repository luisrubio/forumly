<h1>topics Edit <%= topic.name %></h1>

<form action="/topics/<%= topic._id %>?_method=PUT" method="POST">
  <input type="text" name="topic[title]" value="<%= topic.title %>" placeholder="title">
  <input type="text" name="topic[body]" value="<%= topic.body %>" placeholder="body">
  <input type="text" name="topic[image]" value="<%= topic.image %>" placeholder="image url">
  <button>Submit</button>
</form>

