<% include ../partials/header %>

<div class="row side-padding">
  <div class="col-md-8">

    <h1>Edit post</h1>

    <form action="/topics/<%= topic._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="topic[title]" class="form-control" id="title" placeholder="title" value="<%= topic.title %>">
      </div>
      <div class="form-group">
        <label for="body">Body</label>
        <textarea class="form-control" name="topic[body]" id="body" rows="5"><%= topic.body %></textarea>
      </div>
      <div class="form-group">
        <label for="title">Image</label>
        <input type="text" name="topic[image]" class="form-control" id="image" placeholder="image" value="<%= topic.image %>">
      </div>
      <button class="btn btn-main">Edit post</button>
    </form>

    <hr>

    <h1>Delete post</h1>

    <form action="/topics/<%= topic._id %>?_method=DELETE" method="POST">
      <button class="btn btn-danger">Delete post</button>
    </form>

  </div>
</div>

<% include ../partials/footer %>
