    <% topics.forEach(function(topic){ %>
      <div class="row side-padding post-comment">
        <div class="col-md-12" style="padding-bottom: 10px; color: #555; line-height: 100%;">
          <span style="font-size: 1.2em;"><a href="/topics/<%= topic._id %>"><%= topic.title %></a></span><br>
          <span style="font-size: .82em;">posted <%= moment(topic.createdAt).fromNow() %> by <%= topic.author.username %></span><br>
          <span style="font-size: .82em;">0 comments</span>
        </div>
      </div>
    <% }) %>
  </div>
  <div class="col-md-3">
    <p class="side-padding pull-right"><a class="btn btn-main" href="/topics/new">New post</a></p>
  </div>
</div>


